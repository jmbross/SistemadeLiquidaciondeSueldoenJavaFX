<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ModificarTrabajadorController" spacing="10" alignment="TOP_CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Modificar Trabajador" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="DNI:"/>
        <TextField fx:id="dniField" promptText="Ingrese el DNI del trabajador"/>
        <Button text="Buscar" onAction="#buscarTrabajador"/>
    </HBox>
    <Label text="Nombre"/>
    <TextField fx:id="nombreField" promptText="Nombre" editable="false"/>
    <Label text="Apellido"/>
    <TextField fx:id="apellidoField" promptText="Apellido" editable="false"/>
    <Label text="Sueldo"/>
    <TextField fx:id="sueldoField" promptText="Sueldo"/>
    <Button text="Actualizar" onAction="#actualizarTrabajador"/>
</VBox>
